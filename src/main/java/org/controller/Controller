package org.controller;

import java.time.LocalDate;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Controller {
    private String name;
    private String gender;
    private int age;
    private LocalDate birthdate;
    private String health; // Added health field

   

    public class CreateHuman {
        public static void main(String[] args) {
            List<Controller> humans = new ArrayList<>();
            Scanner scanner = new Scanner(System.in);
            System.out.println("Enter name: ");
            String newName = scanner.nextLine();
            System.out.println("Enter age: ");
            int newAge = 0;
            try {
                newAge = Integer.parseInt(scanner.nextLine());
            } catch (NumberFormatException e) {
                System.out.println("Invalid age input. Please enter a valid integer.");
                scanner.close();
                return;
            }
            System.out.println("Enter gender: ");
            String newGender = scanner.nextLine();
            System.out.println("Enter birth year: ");
            int year = 0;
            try {
                year = Integer.parseInt(scanner.nextLine());
            } catch (NumberFormatException e) {
                System.out.println("Invalid birth year input. Please enter a valid integer.");
                scanner.close();
                return;
            }
            System.out.println("Enter birth month: ");
            int month = 0;
            try {
                month = Integer.parseInt(scanner.nextLine());
            } catch (NumberFormatException e) {
                System.out.println("Invalid birth month input. Please enter a valid integer.");
                scanner.close();
                return;
            }
            System.out.println("Enter birth day: ");
            int day = 0;
            try {
                day = Integer.parseInt(scanner.nextLine());
            } catch (NumberFormatException e) {
                System.out.println("Invalid birth day input. Please enter a valid integer.");
                scanner.close();
                return;
            }
            scanner.nextLine();
            try {
                LocalDate birthdate = Controller.createBirthdate(year, month, day);
                Controller newHuman = new Controller();
                newHuman.setName(newName);
                newHuman.setAge(newAge);
                newHuman.setGender(newGender);
                newHuman.setBirthdate(birthdate);
                newHuman.setHealth("good");
                humans.add(newHuman);
            } catch (IllegalArgumentException e) {
                System.out.println("Invalid attributes: " + e.getMessage());
                System.out.println("Please enter valid attributes!");
            }
            scanner.close();
        }
    }

    public class ViewHuman {
        public static void main(String[] args) {
            List<Controller> humans = new ArrayList<>(); 

            for (Controller human : humans) {
                System.out.println(human);
            }
        }
    }

    public class UpdateHuman {
        public static void main(String[] args) {
            List<Controller> humans = new ArrayList<>(); 
            Scanner scanner = new Scanner(System.in);
            System.out.println("Enter the name of the human you want to update: ");
            String name = scanner.nextLine();

            for (Controller human : humans) {
                if (human.getName().equals(name)) {
                    System.out.println("Enter new name: ");
                    String newName = scanner.nextLine();
                    System.out.println("Enter new age: ");
                    int newAge = scanner.nextInt();
                }
            }
            scanner.close();
        }
    }

    public class DeleteHuman {
        public static void main(String[] args) {
            List<Controller> humans = new ArrayList<>(); 
            Scanner scanner = new Scanner(System.in);
            System.out.println("Enter the name of the human you want to delete: ");
            String name = scanner.nextLine();
            scanner.close();

            for (Controller human : humans) {
                if (human.getName().equals(name)) {
                    humans.remove(human);
                }

                else {
                    System.out.println("Human not found");
                    return;
                }
            }
            scanner.close();
        }
    }

    public class CreateActivity() {
        public static void main(String[] args) {
            List<Controller> humans = new ArrayList<>();
            Scanner scanner = new Scanner(System.in);
            System.out.println("Enter the name of the person you want to add an activity to: ");
            String name = scanner.nextLine();

            try {
            for (Controller human : humans) {
                if (human.getName().equals(name)) {
                    System.out.println("Enter the activity: ");
                    String activity = scanner.nextLine();
                    System.out.println("Enter the date of the activity: ");
                    String date = scanner.nextLine();
                    human.addActivity(activity, date);
                }
            }
            scanner.close();

            } catch (IllegalArgumentException e) {
                System.out.println("Invalid attributes: " + e.getMessage());
                System.out.println("Please enter a valid activity!");
            }
        }
        
    }









    public class healthstate {
        private String health;
        private int weight;
        private int heartRate;

        public String getHealth() {
            return health;
        }

        public void setHealth(String health) {
            this.health = health;
        }

        

        public int getWeight() {
            return weight;
        }

        public void setWeight(int weight) {
            this.weight = weight;
        }

        public int getHeartRate() {
            return heartRate;
        }

        public void setHeartRate(int heartRate) {
            this.heartRate = heartRate;
                }
            }
                private String health;
                private int weight;
                private int heartRate;

                public String getHealth() {
                    return health;
                }

                public void setHealth(String health) {
                    this.health = health;
                }

                public int getWeight() {
                    return weight;
                }

                public void setWeight(int weight) {
                    this.weight = weight;
                }

                public int getHeartRate() {
                    return heartRate;
                }

                public void setHeartRate(int heartRate) {
                    this.heartRate = heartRate;
                }

                //constructor for controller, initializes starting health to good

                public Controller() {
                    this.health = "good"; 
                }
            }
        

    


    

